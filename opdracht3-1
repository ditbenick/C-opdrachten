#include <stdio.h>

void maxArrays(float, float, float*);

int main(){
    float max = 0;
    int i;
    float minmax[4][4] = {
       {0, 0.7, 4.1, 0},
       {1, 3.3, 1.5, 0},
       {2, 0.5, 0.5, 0},
       {3, 10.3, 2.3, 0}
    };
    for( i = 0; i < 4; i++){
        printf("%0.1f en %0.1f", minmax[i][1], minmax[i][2]);
        maxArrays(minmax[i][1], minmax[i][2], &max);
        minmax[i][3] = max;
        printf("de hoogste waarde is %0.1f\n", minmax[i][3]);
    }
    
    return 0;
}

void maxArrays(float a1, float a2, float *max){
    int i;
    for( i = 0; i < 4; i++){
        if(a1 < a2){
            *max = a2;
        }
        else {
            *max = a1;
        }
    }
    
}
