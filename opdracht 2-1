#include <stdio.h>
#include <stdlib.h>

int main()
{
    int z;

    printf("kies een optie:");
    scanf("%d", &z);
    
    if (z == 1){
        printf("foute keuze dit was een boom *explosie*");
    }
    else if (z == 2)  {
        system("opdracht1-1.exe");
        
    }
    else if (z == 0)  {
        printf("gefeliciteerd u heeft een koekje verdient, ik pak hem niet mag je lekker zelf doen");
    }
    else if (z < 0) {
        return(0);
    }
}
